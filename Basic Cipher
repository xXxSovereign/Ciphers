import java.util.stream.IntStream;
import java.util.Scanner;



public class Main {
    static char[] ascii = (new String(IntStream.rangeClosed(32, 126).toArray(), 0, 95)).toCharArray();

    public static void main(String[] args){
        Scanner input = new Scanner(System.in);
        System.out.print("1:Encode, 2:Decode ? ");
        int choice = input.nextInt();

        if (choice == 1){
            System.out.println(encode(In()));

        } else if (choice == 2) {
            System.out.println(decode(In()));
        } else {
            System.out.println("INVALID RESPONsE, RESTARTING.");
            main(new String[]{""});
        }


    }

    static String In(){
        Scanner input = new Scanner(System.in);
        System.out.println("\ngive me the words");
        return input.nextLine();
    }

    static String encode(String input){
        char[] encodedChars = new char[input.length()];
        String output = "";

        for (int i = 0; i < input.length(); i++) {
            char current = input.charAt(i);
            if ((int)current == 126) encodedChars[i] = ' ';
            else encodedChars[i] = (char) ((int)current + 1);
        }

        System.out.println(input);
        for( char c:encodedChars) {
            output += c;
            output += ascii[((int) (Math.random() * ascii.length)) + 1];
        }
            return output;
    }

    static String decode(String input){
        String output = "";

        for (int i = 0; i < input.length(); i+=2) {
            char current = input.charAt(i);
            output += (char) ((int)current - 1);
        }

        return output;
    }


}
